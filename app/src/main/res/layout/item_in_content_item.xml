<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/order_item_name"
        android:layout_width="wrap_content"
        android:fontFamily="@font/akrobat_regular"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="10dp"
        android:text="Булочка с кунжутом"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/akrobat_regular"
        android:padding="10dp"
        android:text="x1"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/order_item_price"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_item_price"
        android:textSize="18dp"
        android:layout_width="70dp"
        android:gravity="end"
        android:layout_height="wrap_content"
        android:fontFamily="@font/akrobat_bold"
        android:text="1500 р"
        android:padding="10dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>