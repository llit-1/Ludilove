<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:paddingTop="1dp"
    android:orientation="vertical"
    android:background="@drawable/rounded_background_for_card"
    android:layout_margin="2dp"
    >


    <ImageView
        android:id="@+id/item_list_image"
        android:layout_width="0dp"
        android:layout_margin="5dp"
        android:padding="6dp"
        android:layout_height="200dp"
        android:contentDescription="Баба"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1"
        app:srcCompat="@drawable/item62" />

    <TextView
        android:id="@+id/item_list_title"
        android:minHeight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:ellipsize="end"
        android:fontFamily="@font/cuprum_bold"
        android:gravity="center|center_vertical"
        android:text="Максимально длинное название булочки"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_list_image" />

    <TextView
        android:id="@+id/item_list_price"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/cuprum_bold"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        android:text="20 Р"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_list_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>