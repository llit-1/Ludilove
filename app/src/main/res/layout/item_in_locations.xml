<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/orange"
    android:id="@+id/wrapper_location"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="5dp"
    >

    <TextView
        android:id="@+id/name_location"
        android:layout_width="175dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/akrobat_regular"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="start"
        android:text="Богатырский 54"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/wrapper_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_location"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/akrobat_regular"
        android:padding="0dp"
        android:visibility="invisible"
        android:layout_margin="0dp"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="start"
        android:text="Богатырский 54"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/wrapper_location"
        app:layout_constraintStart_toEndOf="@+id/name_location"
        app:layout_constraintEnd_toStartOf="@+id/distance_location"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/distance_location"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/akrobat_regular"
        android:gravity="center"
        android:text="4.29 Км"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/wrapper_location"
        app:layout_constraintEnd_toStartOf="@+id/confirm_location"
        app:layout_constraintStart_toEndOf="@+id/name_location"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirm_location"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:text="Выбрать"
        android:fontFamily="@font/akrobat_regular"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/wrapper_location"
        />






</androidx.constraintlayout.widget.ConstraintLayout>